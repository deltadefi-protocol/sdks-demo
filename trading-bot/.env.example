# DeltaDeFi Configuration (Required)
# Get API key from DeltaDeFi platform
EXCHANGE__DELTADEFI_API_KEY=your_api_key_here
EXCHANGE__DELTADEFI_BASE_URL=https://api-staging.deltadefi.io

# Binance Configuration
EXCHANGE__BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# Trading Strategy Configuration
TRADING__SYMBOL_SRC=ADAUSDT
TRADING__SYMBOL_DST=ADAUSDM
TRADING__ANCHOR_BPS=5
TRADING__VENUE_SPREAD_BPS=3
TRADING__QTY=100.0
TRADING__SIDE_ENABLE=["bid", "ask"]

# Risk Management
RISK__MAX_POSITION_SIZE=5000.0
RISK__MAX_DAILY_LOSS=1000.0
RISK__ENABLE_OMS=true
RISK__EMERGENCY_STOP=false

# System Configuration
SYSTEM__MODE=testnet
SYSTEM__LOG_LEVEL=INFO
SYSTEM__DB_PATH=trading_bot.db
SYSTEM__MAX_ORDERS_PER_SECOND=5.0

# Performance Tuning (Optional)
TRADING__MIN_REQUOTE_MS=100
TRADING__REQUOTE_TICK_THRESHOLD=0.0001
TRADING__STALE_MS=5000